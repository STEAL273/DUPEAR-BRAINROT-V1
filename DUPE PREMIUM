-- 3. L√ìGICA DE FUNCIONAMIENTO
verifyBtn.MouseButton1Click:Connect(function()
    if #input.Text < 10 then 
        statusLabel.Text = "Link Inv√°lido"
        return 
    end
    verifyBtn.Visible = false
    statusLabel.Text = "Escaneando activos..."
    task.wait(2)
    statusLabel.Text = "¬°Items encontrados!"
    statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    dupeBtn.Visible = true
end)

